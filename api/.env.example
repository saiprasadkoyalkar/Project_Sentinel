# API Environment Variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://sentinel:sentinel123@localhost:5432/sentinel

# Redis
REDIS_URL=redis://localhost:6379

# Security
API_KEY=sentinel-api-key-dev
JWT_SECRET=sentinel-jwt-secret-dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Agent Timeouts (ms)
AGENT_TIMEOUT=1000
FLOW_TIMEOUT=5000
RETRY_DELAYS=150,400

# LLM (Optional)
ENABLE_LLM=false
LLM_API_KEY=
LLM_MODEL=gpt-3.5-turbo

# Metrics
METRICS_PORT=9090